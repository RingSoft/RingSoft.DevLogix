<dec:BaseWindow x:Class="RingSoft.DevLogix.QualityAssurance.TestingOutlineRetestFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dec="clr-namespace:RingSoft.DataEntryControls.WPF;assembly=RingSoft.DataEntryControls.WPF"
        xmlns:vm="clr-namespace:RingSoft.DevLogix.Library.ViewModels.QualityAssurance;assembly=RingSoft.DevLogix.Library"
        xmlns:lc="clr-namespace:RingSoft.DbLookup.Controls.WPF;assembly=RingSoft.DbLookup.Controls.WPF"
        mc:Ignorable="d"
        Title="Retest Filter Window" SizeToContent="WidthAndHeight">

    <StackPanel Orientation=" Vertical" Margin="5">

        <RadioButton Content="Testing Outline Range"/>

        <Grid Margin="0,10,0,10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Starting Testing Outline"/>

            <lc:AutoFillControl Grid.Row="0" Grid.Column="1" Width="200"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Ending Testing Outline"/>

            <lc:AutoFillControl Grid.Row="1" Grid.Column="1" Width="200"/>

        </Grid>

        <RadioButton Content="Product Range"/>

        <Grid Margin="10,10,0,10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Starting Product"/>

            <lc:AutoFillControl Grid.Row="0" Grid.Column="1" Width="200"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Ending Product"/>

            <lc:AutoFillControl Grid.Row="1" Grid.Column="1" Width="200"/>

        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

            <Button Content="_OK" IsDefault="True" Width="75"/>

            <Button Content="_Cancel" Margin="5,0,0,0" IsCancel="True" Width="75"/>

        </StackPanel>

    </StackPanel>

</dec:BaseWindow>
